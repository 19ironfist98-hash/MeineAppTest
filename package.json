{
  "name": "meineapp",
  "productName": "MeineApp",
  "description": "My Electron application description",
  "version": "1.0.0",
  "author": "denni",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "37.2.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.meineapp.test",
    "productName": "MeineApp",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "caval.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "caval.ico",
      "identity": null
    },
    "linux": {
      "target": "AppImage",
      "icon": "caval.ico"
    }
  }
}
